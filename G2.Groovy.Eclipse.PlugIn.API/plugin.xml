<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="G2 Script (Groovy)"
            extensions="g2"
            icon="icons/sample.gif"
            contributorClass="g2.scripts.editors.MultiPageEditorContributor"
            class="g2.scripts.editors.MultiPageEditor"
            id="g2.scripts.editors.MultiPageEditor">
      </editor>
   </extension>
   
   
   <extension point="org.eclipse.ui.views">
      <category name="G2 (Groovy)"
            	id="New_G2_View">
      </category>
      <view name="Write TeamMentor Script"
            icon="icons/sample.gif"
            category="New_G2_View"
            class="g2.scripts.views.SimpleEditor"
            id="g2.scripts.views.SimpleEditor">
      </view>
      <view name			= "Web Browser"
            icon			= "icons/sample.gif"
            category		= "New_G2_View"
            class			= "g2.scripts.views.DefaultPart_WebBrowser"
            id				= "g2.scripts.views.DefaultPart_WebBrowser"
            allowMultiple 	= "true"
            restorable 		= "false">
      </view>
      <view name			= "Panel"
            icon			= "icons/sample.gif"
            category		= "New_G2_View"
            class			= "g2.scripts.views.DefaultPart_Panel"
            id				= "g2.scripts.views.DefaultPart_Panel"
            allowMultiple 	= "true"
            restorable 		= "false">
      </view>
   </extension>
   
   
   <extension point="org.eclipse.ui.newWizards">
      <category
            name="G2 Wizard"
            id="New_G2_Wizard">
      </category>
      <wizard
            name="Write G2 Script"
            icon="icons/sample.gif"
            category="New_G2_Wizard"
            class="g2.scripts.wizards.SampleNewWizard"
            id="g2.scripts.wizards.SampleNewWizard">
      </wizard>
   </extension>
   
  <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="Plug2.actionSet">
         <menu
               label="&amp;TeamMentor"
               id="sampleMenu">
            <separator name="sampleGroup"></separator>
         </menu>
         <action
               label="&amp;Write TeamMentor Script"
               icon="icons/sample.gif"
               class="g2.scripts.actions.OpenSimpleEditor"
               tooltip="Write TeamMentor Script"
               menubarPath="sampleMenu/sampleGroup"               
               id="g2.scripts.actions.OpenSimpleEditor">
         </action>
      </actionSet>
   </extension>

</plugin>
